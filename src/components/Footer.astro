---
import { SITE } from '../data/site';
import { renderName } from '../utils/names';
import Icon from './Icon.astro';
const year = new Date().getFullYear();
---
<footer class="hairline" style="margin-top:48px">
	<div style="max-width:var(--container);margin:0 auto;padding:24px var(--gutter);display:flex;gap:12px;align-items:center;justify-content:space-between">
		<span>&copy; {year} {renderName('solo')}</span>
		<ul style="list-style:none;display:flex;gap:14px;margin:0;padding:0">
			{SITE.social.googleScholar && (
				<li>
					<a href={SITE.social.googleScholar} aria-label="google scholar" title="google scholar" style="display:inline-flex;align-items:center;gap:6px">
						<Icon name="google-scholar" size={18} />
					</a>
				</li>
			)}
			{SITE.social.orcid && (
				<li>
					<a href={SITE.social.orcid} aria-label="orcid" title="orcid" style="display:inline-flex;align-items:center;gap:6px">
						<Icon name="orcid" size={18} />
					</a>
				</li>
			)}
			{SITE.social.github && (
				<li>
					<a href={SITE.social.github} aria-label="github" title="github" style="display:inline-flex;align-items:center;gap:6px">
						<Icon name="github" size={18} />
					</a>
				</li>
			)}
			{SITE.social.x && (
				<li>
					<a href={SITE.social.x} aria-label="x" title="x" style="display:inline-flex;align-items:center;gap:6px">
						<Icon name="x" size={18} />
					</a>
				</li>
			)}
		</ul>
	</div>
</footer>


