---
const { src, alt = '', size = 180 } = Astro.props as { src: string; alt?: string; size?: number };
if (!src) {
	throw new Error('SquircleImage requires a src');
}
---
<figure style={`width:${size}px;height:${size}px;display:inline-block;border-radius:33% / 28%;overflow:hidden;box-shadow:var(--shadow);border:1px solid color-mix(in oklab, var(--color-fg) 12%, transparent);background:color-mix(in oklab, var(--color-fg) 4%, transparent)`}>
	<img src={src} alt={alt} width={size} height={size} style="width:100%;height:100%;object-fit:cover;display:block" />
</figure>


